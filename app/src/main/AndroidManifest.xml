<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wordpress.techanand.financialcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activities.StockPriceActivity"
            android:label="@string/title_activity_stock_price"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wordpress.techanand.financialcalculator.MainActivity" />
        </activity>
        <activity
            android:name=".app.activities.FixedDepositActivity"
            android:label="Fixed Deposit Calculator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wordpress.techanand.financialcalculator.MainActivity" />
        </activity>
        <activity
            android:name=".app.activities.LoanActivity"
            android:label="Loan Calculator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wordpress.techanand.financialcalculator.MainActivity" />
        </activity>
        <activity
            android:name=".app.activities.RecurringDepositActivity"
            android:label="Recurring Deposit Calculator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wordpress.techanand.financialcalculator.MainActivity" />
        </activity>
        <activity
            android:name=".app.activities.MutualFundActivity"
            android:label="Mutual Fund Calculator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wordpress.techanand.financialcalculator.MainActivity" />
        </activity>
        <activity
            android:name=".app.activities.RetirementActivity"
            android:label="Retirement Calculator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wordpress.techanand.financialcalculator.MainActivity" />
        </activity>
        <activity
            android:name=".app.activities.TaxActivity"
            android:label="Tax Calculator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wordpress.techanand.financialcalculator.MainActivity" />
        </activity>
        <activity android:name=".app.activities.BudgetActivity"
            android:label="Budget Calculator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wordpress.techanand.financialcalculator.MainActivity" />
        </activity>
    </application>

</manifest>