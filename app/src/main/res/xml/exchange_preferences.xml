<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference android:title="@string/prefs.exchange_service_tax_title"
        android:key="@string/prefs.exchange_service_tax_key"
        android:defaultValue="@string/prefs.exchange_service_tax_default"
        android:inputType="numberDecimal"/>
    <EditTextPreference android:title="@string/prefs.sebi_charges_title"
        android:key="@string/prefs.sebi_charges_key"
        android:defaultValue="@string/prefs.sebi_charges_default"
        android:inputType="numberDecimal"/>

    <PreferenceCategory android:title="@string/prefs.exchange_stamp_duty_title">
        <EditTextPreference android:title="@string/prefs.exchange_stamp_duty_min_title"
            android:key="@string/prefs.exchange_stamp_duty_min_key"
            android:defaultValue="@string/prefs.exchange_stamp_duty_min_default"
            android:inputType="numberDecimal"/>
        <EditTextPreference android:title="@string/prefs.exchange_stamp_duty_percent_title"
            android:key="@string/prefs.exchange_stamp_duty_percent_key"
            android:defaultValue="@string/prefs.exchange_stamp_duty_percent_default"
            android:inputType="numberDecimal"/>
