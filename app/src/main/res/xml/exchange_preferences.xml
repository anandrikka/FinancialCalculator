            android:key="@string/prefs.exchange.nsecharges.futures_key"
            android:defaultValue="@string/prefs.exchange.nsecharges.futures_default"
            android:inputType="numberDecimal"/>
        <EditTextPreference android:title="@string/prefs.exchange.nsecharges.options_title"
            android:key="@string/prefs.exchange.nsecharges.options_key"
            android:defaultValue="@string/prefs.exchange.nsecharges.options_default"
            android:inputType="numberDecimal"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/prefs.exchange.bsecharges_title">
        <EditTextPreference android:title="@string/prefs.exchange.bsecharges.delivery_title"
            android:key="@string/prefs.exchange.bsecharges.delivery_key"
