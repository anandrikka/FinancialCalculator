<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.fragments.MutualFundSIP">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:id="@+id/table">

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="50dp"
                    android:text="Total cost in Today's value"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:id="@+id/today_value"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="50dp"
                    android:text="Already saved amount"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:id="@+id/saved_amount"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="50dp"
                    android:text="Years to reach Goal"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:id="@+id/years_to_reach"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="50dp"
                    android:text="Expected Inflation(%)"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:id="@+id/inflation"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:paddingRight="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Expected Return(%)"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:id="@+id/expected_return"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Reset"
                    android:id="@+id/reset"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Calculate"
                    android:id="@+id/calculate"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/result_text"/>
            </TableRow>

        </TableLayout>

