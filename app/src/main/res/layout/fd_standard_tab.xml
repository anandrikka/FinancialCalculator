<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:id="@+id/table">

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FD Amount"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:id="@+id/fd_amount"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Period"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_marginRight="8dp"
                    android:inputType="number"
                    android:id="@+id/period_value"/>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/period_unit"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:spinnerMode="dialog" />
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="Rate of Interest (%)"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Compounding"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_marginRight="8dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/roi"/>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/compounding_interest_input"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:spinnerMode="dialog" />
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reset"
                    android:id="@+id/reset_data"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calculate"
                    android:id="@+id/calculate"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table"
            android:id="@+id/resultsTable">

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView android:layout_width="0dp"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:text="Results" />
            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Interest"
                    android:padding="8dp"
                    android:background="@drawable/rectangle_border"/>
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1" android:text=""
                    android:id="@+id/interest"
                    android:background="@drawable/rectangle_border"/>
            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:layout_width="0dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:text="Maturity Amount"
                    android:background="@drawable/rectangle_border"/>
                <TextView android:layout_width="0dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:text=""
                    android:id="@+id/maturity_amount"
                    android:background="@drawable/rectangle_border"/>
            </TableRow>

        </TableLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:layout_below="@+id/resultsTable"
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </RelativeLayout>

</ScrollView>