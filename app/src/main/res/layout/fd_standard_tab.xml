<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:id="@+id/table">

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FD Amount"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:id="@+id/fd_amount"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Period"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_marginRight="8dp"
                    android:inputType="number"
                    android:id="@+id/period_value"/>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/period_unit"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:spinnerMode="dialog" />
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="Rate of Interest (%)"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Compounding"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_marginRight="8dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/roi"/>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/compounding_interest_input"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:spinnerMode="dialog" />
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reset"
                    android:id="@+id/reset_data"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calculate"
                    android:id="@+id/calculate"/>
            </TableRow>

            <TableRow android:paddingTop="20dp" android:id="@+id/maturity_row">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="Maturity Amount"/>
                <TextView
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/maturity_amount"/>
            </TableRow>

        </TableLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:layout_below="@+id/table"
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </RelativeLayout>

</ScrollView>