<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.wordpress.techanand.financialcalculator.app.activities.BudgetActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/income_header"
                android:background="@color/divider">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:text="Income"
                    android:id="@+id/income_label"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:text="$0.00"/>

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/income_header"
                android:id="@+id/income_details"
                android:padding="16dp">

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Monthly Take Home"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Spouse's Monthly Take Home"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Monthly Take Home"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Other Income details"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/expenses_header"
                android:layout_below="@+id/income_details"
                android:background="@color/divider">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:text="Monthly Expenses" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:text="$0.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/housing_expenses_header"
                android:layout_below="@+id/expenses_header"
                android:background="@color/primary_light">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="Housing" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/housing_expenses_header"
                android:id="@+id/housing_expenses_details"
                android:padding="16dp">

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Rent or Mortgage"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Property Taxes (If not mortgage)"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Home Repairs and Maintenance"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Electricity and Gas"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Water Bill"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Mobile and Landline Bill"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Cable and Internet Bill"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Other Housing Expenses"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/transportation_header"
                android:layout_below="@+id/housing_expenses_details"
                android:background="@color/primary_light">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="Transportation" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transportation_header"
                android:id="@+id/transportation_details"
                android:padding="16dp">

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Loan Payment (If applicable)"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Insurance per month"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Fuel"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Maintenance"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Toll Charges"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/personal_header"
                android:layout_below="@+id/transportation_details"
                android:background="@color/primary_light">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="Food &amp; Personal" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personal_header"
                android:id="@+id/personal_details"
                android:padding="16dp">

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Groceries &amp; Households"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Clothing"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Restaurant"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Barber &amp; Beauty Shop"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Cleaning and Laundry"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Newpapers and Magazines"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Pocket Money for Children"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/health_education_header"
                android:layout_below="@+id/personal_details"
                android:background="@color/primary_light">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="Health &amp; Education" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/health_education_header"
                android:id="@+id/health_education_details"
                android:padding="16dp">

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Health Insurance"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Medications"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Hospital Expenses"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Life Insurance"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="School Supplies"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Student Loan"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Tution Fees"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Others"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/others_label"
                android:layout_below="@+id/health_education_details"
                android:background="@color/primary_light">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="Miscellaneous" />

            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/others_label"
                android:id="@+id/others_details"
                android:padding="16dp">

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Hobbies &amp; Sports"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Donations"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow android:paddingBottom="8dp">
                    <TextView android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="Other Expenses"/>
                    <EditText android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:background="@drawable/border"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/reset"
                android:layout_below="@+id/others_details">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="Reset" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="Calculate" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
